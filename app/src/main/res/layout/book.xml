<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_item"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:layout_gravity="top"
    android:layout_marginBottom="@dimen/offset_small"
    android:layout_marginLeft="@dimen/offset_normal"
    android:layout_marginRight="@dimen/offset_normal"
    android:layout_marginTop="@dimen/offset_small"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="84dp"
            android:layout_height="124dp"

            tools:src="@drawable/ic_book" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/offset_normal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title"
                tools:text="@string/test_title" />

            <TextView
                android:id="@+id/authors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/offset_small"
                android:textSize="@dimen/text_author"
                tools:text="@string/test_author" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/offset_small"
                android:textSize="@dimen/text_description"
                tools:text="@string/test_description" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>